USAGE="Usage: csv_chop file.csv (width of chops)"

if [ "$#" -lt 2  ]; then
  echo "$USAGE"
  exit 1
fi

start=2
end=$(($start + $2))
length=`wc -l $1 | awk '{print $1}'`
count=1

echo "Creating $(($length/2)) files"
while [ $end -le $length ]
do
  printf "${count}, "
  csv_split $1 1 $start..$end >> "output${count}.csv"
  start=$(($end+1))
  end=$(($start+$2))
  count=$(($count+1))
done
echo '***********'
echo '**CSV CHOP COMPLETE'
echo '***********'
